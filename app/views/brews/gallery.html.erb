<h1>Listing Your Brews</h1>


<table class="table table-striped table-condensed" name="brews">
  <tr>
    <th>Name</th>
    <th>Style</th>
    <th>Mash type</th>
    <th>Created by</th>
    <th>Submitted on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @brews.each do |brew| %>
  <tr>
    <td><%= brew.name %></td>
    <td><%= brew.style %></td>
    <td><%= brew.mash_type %></td>
    <td><%= brew.created_by %></td>
    <td><%= brew.submitted_at.strftime("%B %d, %Y") %></td>
    <td><%= button_to 'Show', brew, method: :get, class: "btn" %></td>
    <td><%= button_to 'Edit', edit_brew_path(brew), method: :get, class: "btn" %></td>
    <td><%= button_to 'Destroy', brew, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Brew', new_brew_path, class: "btn btn-primary" %>
